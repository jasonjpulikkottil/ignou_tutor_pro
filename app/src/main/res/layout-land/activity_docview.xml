<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DocviewActivity">

    <TextView
        android:id="@+id/TXV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/TXV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        android:textColor="@android:color/holo_red_dark" />

    <ScrollView
        android:id="@+id/ScrollViewDoc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="7">

        <TextView
            android:id="@+id/TXV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ads:srcCompat="@drawable/arrow_down" />

        <ImageView
            android:id="@+id/imageViewPP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/arrow_up" />

        <ImageView
            android:id="@+id/imageViewZM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/zoom_out" />

        <ImageView
            android:id="@+id/imageViewZP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/zoom_in" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/banner_container_doc"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>